<h2><%= @receptacle.name %></h2>
<p><%= @receptacle.description%></p>
<p><i class="fa-solid fa-euro-sign"></i><%= @receptacle.price_per_day %></p>
<p><%= @receptacle.capacity %> kg</p>
<p><%= @receptacle.address %></p>
<%= cl_image_tag @receptacle.picture.key, height: 300, width: 400, crop: :fill %>

<% if policy(@receptacle).update? %>
<%= link_to 'Edit', edit_receptacle_path(@receptacle) %>
<% end %>

<% if policy(@receptacle).destroy? %>
<%= link_to 'Delete', @receptacle, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', receptacles_path %>
