
<div class="banner"><h1>Available Receptacles</h1></div>
  <div class="card-container">
    <% @receptacles.each do |receptacle| %>
      <div class="receptacle-card" >

          <%= cl_image_tag receptacle.picture.key, height: 500, width: 500, crop: :fill%>
          <div class="card-info">
            <h2>
              <%= receptacle.name %>
            </h2>
            <div>
              <% if policy(receptacle).show?%>
              <%= link_to 'More Info', receptacle %>
              <% end %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
