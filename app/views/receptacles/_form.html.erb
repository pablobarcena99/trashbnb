<%= simple_form_for @receptacle do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :picture, as: :file %>
  <%= f.input :description, required: true %>
  <%= f.input :capacity, required: true %>
  <%= f.input :price_per_day, required: true %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } },
              required: true %>
  <%= f.button :submit %>
<% end %>
